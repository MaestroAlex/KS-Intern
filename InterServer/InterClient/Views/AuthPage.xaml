<Page x:Class="InterClient.Views.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InterClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1"
      DataContext="{Binding AuthViewModel, Source={StaticResource Locator}}">

    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" MaxWidth="320">
            <TextBlock Text="Login to your account" Margin="20" TextAlignment="Center"/>
            <TextBox Text="{Binding UserLogin, Mode=TwoWay}" Margin="10"/>
            <PasswordBox Margin="10,0,10,10" Name="PasswordBox"/>
            <Button Content="Login" Click="Button_Click" Margin="10" Height="30"/>
        </StackPanel>
    </Grid>
</Page>
