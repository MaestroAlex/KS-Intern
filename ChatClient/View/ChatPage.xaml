<Page x:Class="ChatClient.View.ChatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatClient.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Чат"
      DataContext="{Binding MainViewModel, Source={StaticResource Locator}}">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF1EA0F5" Offset="0.7"/>
                <GradientStop Color="#FF6DCEE2"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="635*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
            <ListView ItemsSource="{Binding MessageHistory}" Margin="7,7,7,2" Background="#FEFEFE">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding UserName}" FontWeight="Bold" FontSize="13pt" Margin="0,4,0,1" Visibility="{Binding Visible}"/>
                            <TextBlock Text="{Binding Message}" FontSize="12pt" Margin="0,0,0,2"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Grid.Column="2"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="588*"/>
                <ColumnDefinition Width="43*"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Row="2" Margin="7,3,0,5" Text="{Binding Message, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="12pt" FontFamily="Segoe UI" KeyDown="TextBox_KeyDown"
                     VerticalContentAlignment="Center"/>
            <Button Name="btnHelp" Background="White" Grid.Column="2" Content="?" Margin="1,2,7,5" FontSize="15pt" FontFamily="Segoe UI" Click="BtnHelp_Click"/>
        </Grid>

        <StackPanel Grid.Column="1">
        <TextBlock Text="Комнаты:" FontSize="12pt" TextAlignment="Center" Margin="0,7,4,4"/>
        <ListView ItemsSource="{Binding Rooms}" Margin="0,0,4,3" Background="Transparent">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Name}" HorizontalAlignment="Stretch" Height="30" Click="Room_Selected" Background="White" FontSize="12pt"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackPanel>

        <Button Name="btnSend" Background="White" Grid.Column="2" Grid.Row="2" Content="Отправить" FontSize="12pt" FontFamily="Segoe UI" Click="BtnSend_Click" Margin="0,0,4,5"/>
    </Grid>
</Page>
